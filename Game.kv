#:kivy 1.0.9


<Game>:
    player_ship: player_ship
    name: "Game"
    Button:
        size_hint: 0.2, 0.1
        pos_hint: {"x": 0, "top": 1}
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'StartScreen'
        text: "Back"

    Ship:
        id: player_ship
    Asteroid_Movement:


<Asteroid_Movement>:
    Button:
        pos: 250, 250
        size: 100,100
        on_press: root.start()
        on_release: self.parent.remove_widget(self)
        text: "PLAY"


<Ship>:
    id: player_ship
    Button:
        size_hint: None, None
        size: 50,20
        background_color: 0.3,0.6,0.8,1
        pos: (root.x - (self.width/2)),(root.y - (self.height/2))
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.degrees
                origin: self.center
        canvas.after:
            PopMatrix


<Asteroid>:
    canvas:
        Ellipse:
            size: 25,25
            pos: root.pos
        Color:
            rgb: 0.8,0.2,0.8,0.3










