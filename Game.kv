#:kivy 1.0.9


<Game>:
    name: "Game"
    Button:
        size_hint: 0.2, 0.1
        pos_hint: {"x": 0, "top": 1}
        on_press:
            root.manager.transition.direction = 'right'
            root.manager.current = 'StartScreen'
        text: "Back"
    Ship:
    Asteroid_Movement:
    #Asteroid_properties:


<Asteroid_Movement>:
    size_hint: None, None
    canvas:
        Ellipse:
            size: 50,50
            pos: root.pos
        Color:
            rgb: 1,0.2,1
    Button:
        text: "Start"
        size: 100,50
        pos_hint: {"x": 0.5, "top": 1}
        on_press: root.Asteroid_spawn()



#<Asteroid_properties>:
#    canvas:
#        Ellipse:
#            size: 50, 50
#            pos: self.pos
#        Color:
#            rgb: 1,0.2,1

<Ship>:
    Button:
        size_hint: None, None
        size: 50,20
        background_color: 0.3,0.6,0.8
        #pos_hint: {'center_x': .5, 'center_y': .5}
        pos: (root.x - (self.width/2)),(root.y - (self.height/2))
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.degrees
                origin: self.center
        canvas.after:
            PopMatrix
    Label:
        pos:550,400
        text: "Angle: " + str(root.degrees)


<Asteroid_Movement>:
    size_hint:None,None
    Label:
        text: str(root.PlayerScore)
