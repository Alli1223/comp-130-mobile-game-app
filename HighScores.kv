#:kivy 1.0.9


<Game>:
    name: "Game"
    Button:
        on_release: app.root.current = "StartScreen"
        text: "Home"
        font_size: 20
        size_hint: 0.1, 0.05
        pos_hint: {"x": 0, "top": 1}

    Button:
        on_release: root.anim_to_pos()
        text: "reset"
        font_size: 20
        size_hint: 0.1, 0.05
        pos_hint: {"x": 0.8, "top": 1}

    Ship:
Asteroid:
    id: Asteroid
    size_hint: None, None
    pos:200,200
    center: self.center
    canvas:
        Color:
            rgb: 0, 1, 0
        Ellipse:
            pos: self.pos
            size: root.width/2, root.height/2


<Ship>:

    size_hint: None,None
    #size: 100,100
    canvas:
        Color:
            rgb: 1, 0, 0
        Rectangle:
            pos: root.x - (self.width/2),root.y - (self.height/2)
            size: root.width, root.height
