#:kivy 1.0.9


<Game>:
    name: "Game"
    FloatLayout:

        Button:
            size_hint: 0.2, 0.1
            pos_hint: {"x": 0, "top": 1}
            on_press:
                root.manager.transition.direction = 'right'
                root.manager.current = 'StartScreen'
            text: "Back"
        Ship:
