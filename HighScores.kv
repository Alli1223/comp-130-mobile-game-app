<Ship>:
    Button:
        text: 'up'
        size_hint: None, None
        size: 50,20
        #pos_hint: {'center_x': .5, 'center_y': .5}
        pos: (root.x - (self.width/2)),(root.y - (self.height/2))
        canvas.before:
            PushMatrix
            Rotate:
                angle: root.degrees
                origin: self.center
        canvas.after:
            PopMatrix
    FloatLayout:
        Label:
            pos_hint: {"x":.5, "y":1}
            text: "Angle: " + str(root.degrees)


