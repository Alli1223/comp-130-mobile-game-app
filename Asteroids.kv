#:kivy 1.0.9

<Button>:
    font_size: 20
    color: 244,244,244,1
    size: 150,100


MyScreenManager:
    StartScreen:
    Game:
<StartScreen>:
    name: 'StartScreen'
    FloatLayout:

        Button:
            text: "High Scores"
            on_press: root.button_pressed()
            #pos: root.x, root.top - self.height
            #center_x: root.width /4
            #center_y: root.height /4

            size_hint: 0.3, 0.2
            pos_hint: {"x": 0.4, "top":1}
        Button:
            text: "play"
            on_release: app.root.current = "Game"
            size_hint: 0.3, 0.2
            pos_hint: {"x": 0.4, "top": 0.8}



        Label:
            text: root.hello_world
            size_hint: 0.3, 0.2
            pos_hint: {"x": 0.4, "top":0.6}




        Label:
            text: 'First Name'
            font_size: 20
            size_hint: 0.3, 0.2
            pos_hint: {"x":0.13, "y": 0.13}
        TextInput:
            id: username_input
            font_size: 14
            text: 'name'
            size_hint: 0.3, 0.08
            pos_hint: {"x": 0.4, "top":0.3}
            size_hint_y: None
            multiline: False
            focus: True
            on_text: root.on_text(self.text)

